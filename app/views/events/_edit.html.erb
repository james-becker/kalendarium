<div class="container">
  <div class="wrapper">
    <div class="col-xs-12">
      <%= simple_form_for event do |f| %>
    <%= f.input :name, value: params[:name], input_html: { value: params[:name] || event.name, style: 'width: 200px', class: "form-inline" } %>
    <%= f.input :description, value: params[:description], input_html: { value: params[:description] || event.description, style: 'width: 200px' } %>
    <%= f.input :start_time, input_html: { value: params[:start_time] || event.start_time} %>
    <%= f.input :end_time, input_html: { value: params[:end_time] || event.end_time } %>
    <%= f.hidden_field :calendar_id, value: 1 %>
    <button type="submit" class="btn btn-primary btn-round">
      <%= fa_icon('check') %>
    </button>
  <% end %>
    </div>
  </div>
</div>


