<%= simple_form_for Event.new do |f| %>
    <%= f.input :name, input_html: { style: 'width: 80%; margin: 0px 30px' } %>
    <%= f.input :description, input_html: { style: 'width: 80%; margin: 0px 30px' } %>
    <%= f.input :start_time %>
    <%= f.input :end_time %>
    <%= f.hidden_field :calendar_id, value: 1 %>

  <button type="submit" class="btn btn-primary btn-round">
    <%= fa_icon('check') %>
  </button>
<% end %>
